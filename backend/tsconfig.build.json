{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    /* key changes ↓↓↓ */
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    /* paths so both front & back can `import "@shared/…" …` */
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/src/*"]
    }
  },
  /* include the backend itself **plus** shared types */
  "include": ["src", "../shared/src/**/*.ts", "../shared/src/**/*.json"]
}