{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "rootDir": "."                /* remove mismatch with shared path */
  },
  "include": [
    "src/**/*",
    "../shared/src/**/*.ts"       /* keep shared types visible */
  ],
  "exclude": ["node_modules"]
}
