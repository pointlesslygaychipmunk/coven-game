{
  "extends": "./tsconfig.json",       // inherit your normal backend options
  "compilerOptions": {
    "rootDir": ".",                   // so TS will treat BOTH src/ and ../shared as “under” this project
    "outDir": "dist",                 // compiled .js goes here
    "composite": false,
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",                    // all your API code
    "../shared/**/*.ts"               // pull in the shared types too!
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}