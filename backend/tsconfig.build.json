// backend/tsconfig.build.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // point *one level up*, so that both `backend/` and `shared/` are under rootDir
    "rootDir": "..",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "../shared/**/*.ts"   // <-- bring in your shared types
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}