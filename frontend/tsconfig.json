{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@ui/*": ["components/ui/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src"]
}