{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",

    /*  ↓↓↓  alias map  */
    "paths": {
      "@/*":       ["src/*"],
      "@ui/*":     ["src/components/ui/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },

  /* make shared types part of the program */
  "include": ["src", "../shared/src", "vite.config.ts"]
}