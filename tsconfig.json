{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "backend/**/*.ts",
    "shared/**/*.ts",
    "frontend/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}