{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "backend/**/*.ts",
    "shared/**/*.ts",
    "frontend/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}